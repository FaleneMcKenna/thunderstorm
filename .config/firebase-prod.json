{
  "functions": {
    "source": "app-backend",
    "ignore": [
      "src",
      ".config",
      "dist-test",
      "deploy.js",
      "node_modules"
    ],
    "predeploy": [
      "npm --prefix ./app-backend run lint",
      "npm --prefix ./app-backend run build"
    ]
  },
  "hosting": {
    "public": "app-frontend/dist/dev",
    "redirects": [
      {
        "source": "/backend/api/:rPath*",
        "destination": "https://us-central1-nu-art-thunderstorm.cloudfunctions.net/api/:rPath",
        "type": 307
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
